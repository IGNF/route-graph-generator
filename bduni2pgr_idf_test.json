      "parallelization": {
        "threads": 4
      },
      "overwrite": true,
      "operation": "creation"
    },
    "bases": [
      {
        "id": "base_pivot",
        "type": "bdd",
        "configFile": "db_config_pivot.json"
      },
      {
        "id": "base_bduni",
        "type": "bdd",
        "configFile": "bduni_config.json"
      },
      {
        "id": "base_pgrouting",
        "type": "bdd",
        "configFile": "routing_docker.json"
      }
    ],
    "workingSpace": {
      "directory": "/var/tmp/",
      "baseId": "base_pivot"
