            "baseId": "base_bduni"
          },
          "storage": {
            "file": "sql/bduni_convert.sql"
          }
        },
        "defaultAttributes": [
          "name"
        ]
      },
      "sources": [
        {
          "id": "bduni-idf-car-fastest",
          "type": "pgr",
          "storage": {
            "dbConfig": "routing_docker.json",
            "costColumn": "cost_s_car",
            "rcostColumn": "reverse_cost_s_car"
          },
          "cost": {
            "profile": "car",
            "optimization": "fastest",
            "compute": {
              "storage": {
                "file": "./io/costs_calculation_sample.json"
              },
              "configuration": {
                "name": "cost_s_car",
                "storage": {
                  "file": "./io/costs_calculation_sample.json"
                }
              }
            }
          }
        },
        {
          "id": "bduni-idf-car-shortest",
          "type": "pgr",
          "storage": {
            "dbConfig": "routing_docker.json",
            "costColumn": "cost_m_car",
            "rcostColumn": "reverse_cost_m_car"
          },
          "cost": {
            "profile": "car",
            "optimization": "shortest",
            "compute": {
              "storage": {
                "file": "./io/costs_calculation_sample.json"
              },
              "configuration": {
                "name": "cost_m_car",
                "storage": {
                  "file": "./io/costs_calculation_sample.json"
                }
              }
            }
          }
        }
      ],
      "availableOperations": [
        {
          "id": "route",
          "rate": 10,
          "maxIntermediatePoints": 10,
          "maxNumberOfConstraints": 2,
          "constraints": [
            {
              "id": "filter-unique",
              "type": "filter-osrm",
              "description": "Type d'arc.",
              "key": "road_type",
              "values": [
                "autoroute",
                "tunnel"
              ],
              "availableConstraints": [
                "banned"
              ],
              "availableOperators": [
                "="
              ]
            }
          ],
          "defaultParameters": [
            {
              "id": "algorithm",
              "default": "contraction-hierarchies"
            },
            {
              "id": "format",
              "default": "application/json"
            },
            {
              "id": "getGeometry",
              "default": true
            },
            {
              "id": "getBbox",
              "default": true
            },
            {
              "id": "getInstructions",
              "default": false
            },
            {
              "id": "distanceUnit",
              "default": "kilometer"
            },
            {
              "id": "timeUnit",
              "default": "h-m-s"
            }
          ]
        },
        {
          "id": "nearest",
          "rate": 20,
          "maxNumber": 100,
          "defaultParameters": [
            {
              "id": "format",
              "default": "application/json"
            },
            {
              "id": "getId",
              "default": false
            },
            {
              "id": "number",
              "default": 1
            },
            {
              "id": "type",
              "default": "all"
            }
          ]
        }
