{
  "generation": {
    "general": {
      "id": "bduni2osrm",
      "logs": {
        "configFile": "sample_log_config.json"
      },
      "parallelization": {
        "threads": 4
      },
      "overwrite": true,
      "operation": "creation"
    },
    "bases": [
      {
        "id": "base_pivot",
        "type": "bdd",
        "configFile": "db_config_pivot.json"
      },
      {
        "id": "base_bduni",
        "type": "bdd",
        "configFile": "bduni_config.json"
      }
    ],
    "workingSpace": {
      "directory": "/var/tmp/",
      "baseId": "base_pivot"
    },
    "resource": {
      "id": "bduni-idf-osrm",
      "type": "osrm",
      "defaultSourceId": "bduni-idf-car-fastest",
      "description": "Données BDUNI v2.",
      "boundingBox": "1.7,48.4,3.3,49.1",
      "defaultProjection": "EPSG:4326",
      "availableProjections": [
        "EPSG:4326",
        "EPSG:2154"
      ],
      "topology": {
        "description": "Données issues de la BDUNI de l'IGN.",
        "storage": {
          "file": "/mnt/data/bduni-idf.osm"
        },
        "projection": "EPSG:4326",
        "bbox": "1.7,48.4,3.3,49.1",
        "mapping": {
          "source": {
            "baseId": "base_bduni"
          },
          "storage": {
            "file": "sql/bduni_convert.sql"
          }
        },
        "defaultAttributes": [
          "name"
        ]
      },
      "sources": [
        {
          "id": "bduni-idf-car-fastest",
          "type": "osrm",
          "storage": {
            "file": "/mnt/data/bduni-idf-car-fastest/bduni-idf-car-fastest.osrm"
          },
          "cost": {
            "profile": "car",
            "optimization": "fastest",
            "compute": {
              "storage": {
                "file": "./docker/centos7/config/bduniv2_avec_sens_vitesse_fixe.lua"
              },
              "configuration": {
                "name": "cost_s_car",
                "storage": {
                  "file": "./io/costs_calculation_sample.json"
                }
              }
            }
          }
        },
        {
          "id": "bduni-idf-car-shortest",
          "type": "osrm",
          "storage": {
            "file": "/mnt/data/bduni-idf-car-shortest/bduni-idf-car-shortest.osrm"
          },
          "cost": {
            "profile": "car",
            "optimization": "shortest",
            "compute": {
              "storage": {
                "file": "./docker/centos7/config/bduniv2_distance.lua"
              },
              "configuration": {
                "name": "cost_s_car",
                "storage": {
                  "file": "./io/costs_calculation_sample.json"
                }
              }
            }
          }
        }
      ],
      "availableOperations":[
        {
          "id": "route",
          "parameters": [
            {
              "id": "resource",
              "values": [
                "corse-osm"
              ]
            },
            {
              "id": "start",
              "values": {
                "bbox": "-90,-180,90,180"
              }
            },
            {
              "id": "end",
              "values": {
                "bbox": "-90,-180,90,180"
              }
            },
            {
              "id": "profile",
              "defaultValueContent": "car",
              "values": [
                "car"
              ]
            },
            {
              "id": "optimization",
              "defaultValueContent": "fastest",
              "values": [
                "fastest"
              ]
            },
            {
              "id": "intermediates",
              "values": {
                "bbox": "-90,-180,90,180"
              }
            },
            {
              "id": "stepsGeometry",
              "defaultValueContent": "true"
            },
            {
              "id": "waysAttributes",
              "values": [
                "name"
              ]
            },
            {
              "id": "algorithm",
              "defaultValueContent": "ch",
              "values": [
                "ch",
                "mld"
              ]
            },
            {
              "id": "geometries_type",
              "defaultValueContent": "geojson",
              "values": [
                "geojson",
                "polyline"
              ]
            }
          ]
        }
      ]
    },
    "outputs": {
      "configuration": {
        "storage": {
          "file": "./bduni_idf_osrm.resource"
        }
      },
      "dirs": {
        "dbConfigDir": "/home/docker/data",
        "sqlDir": "/home/docker/data",
        "profileDir": "/home/docker/data",
        "resourceDir": "/home/docker/data/resources"
      },
      "sshConfig":{
        "host": "127.0.0.1",
        "port": 22,
        "username": "toto",
        "password": "mdp1"
      }
    }
  }
}
